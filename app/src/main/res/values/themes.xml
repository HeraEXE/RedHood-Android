<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RedHood" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_7</item>
        <item name="colorPrimaryVariant">@color/red_7</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_4</item>
        <item name="colorSecondaryVariant">@color/red_2</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="ActionBarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/red_7</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="Theme.RedHood.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ButtonStyle">
        <item name="background">@drawable/gradient_redorange</item>
    </style>



    <style name="Theme.RedHood.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.RedHood.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>